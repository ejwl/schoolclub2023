<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"



    android:id="@+id/id_find"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:foregroundTint="#FFFFFF">

    <LinearLayout
        android:id="@+id/id_find_email"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tx_id_find_email"
            android:layout_width="299dp"
            android:layout_height="71dp"
            android:ems="10"
            android:hint="등록된 이메일을 입력하세요"
            android:inputType="textEmailAddress"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="150dp"
            android:background="@drawable/bold"/>

        <Button
            android:id="@+id/bt_id_find_email_check"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:background="@drawable/bold"
            android:text="인증"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationX="325dp"
            android:translationY="91dp" />

        <EditText
            android:id="@+id/tx_id_find_email_check_number"
            android:layout_width="299dp"
            android:layout_height="71dp"
            android:background="@drawable/bold"
            android:ems="10"
            android:hint="이메일로 전송한 번호"
            android:inputType="number"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="110dp"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/bt_id_find_email_number"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:background="@drawable/bold"
            android:text="확인"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationX="325dp"
            android:translationY="52dp"
            tools:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_find_email_number_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tx_id_find_email_number_check"
            android:layout_width="350dp"
            android:layout_height="71dp"
            android:textSize="34sp"
            android:textStyle="bold"
            android:translationX="25dp"
            android:translationY="310dp"
            tools:visibility="invisible"
            android:background="@drawable/bold"/>

        <TextView
            android:id="@+id/tx_id_find_id"
            android:layout_width="350dp"
            android:layout_height="71dp"
            android:background="@drawable/bold"
            android:textSize="48sp"
            android:textStyle="bold"
            android:translationX="25dp"
            android:translationY="320dp"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/bt_id_find_ask_password_find"
            android:layout_width="200dp"
            android:layout_height="71dp"
            android:background="@drawable/bold"
            android:text="비밀번호 찾기"
            android:textSize="24sp"
            android:textStyle="bold"
            android:translationX="100dp"
            android:translationY="330dp"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/tx_id_find_password"
            android:layout_width="350dp"
            android:layout_height="71dp"
            android:background="@drawable/bold"
            android:textSize="34sp"
            android:textStyle="bold"
            android:translationX="25dp"
            android:translationY="340dp"
            tools:visibility="invisible" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>